
@using MvcOnlineTicariOtomation.Models.Siniflar
@model List<KargoDetay>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
@using (Html.BeginForm("Index", "Kargo", FormMethod.Get))
{
    <p>
        KArgo Takip numarası : @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}

<table class="table table-bordered">
    <tr>

        <th>Personel</th>
        <th>Alıcı</th>
        <th>Tarih</th>
        <th>Takip kodu</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var k in Model)
    {

<tr>

    <td>
        @k.Personel
    </td>
    <td>
        @k.Alici
    </td>
    <td>
        @k.Tarih
    </td>
    <td>
        @k.TakipKodu
    </td>
    <td><a href="/Kargo/KargoTakip/@k.TakipKodu" style="background-color:lightcoral" class="btn btn-default">Detay</a></td>

</tr>
    }


</table>


