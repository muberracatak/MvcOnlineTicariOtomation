@using MvcOnlineTicariOtomation.Models.Siniflar
@model List<FaturaKalem>
@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Fatura Kalemleri Detay</h2>
<br />
<div style="background-color:darkgray">
    deneme
</div>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"></li>
</ol>
<table class="table table-hover">
    <tr>
        <th> Id</th>
        <th>Aciklama</th>
        <th>Miktar</th>
        <th>Birim Fiyat</th>
        <th>Tutar</th>
    </tr>
    @foreach (var x in Model)
    {
<tr>
    <td>@x.FaturaKalemId</td>
    <td>@x.Aciklama</td>
    <td>@x.Miktar</td>
    <td>@x.BirimFiyat</td>
    <td>@x.Tutar</td>
    <td>
        <a href="/Departman/DepartmanPersonelSatis/@x.FaturaKalemId"
           class="btn btn-default"
           style="background-color:navajowhite">Satislar</a>
    </td>
</tr>
    }

</table>
<a href="/Fatura/YeniKalem/" class="btn btn-default" style="background-color:darksalmon">Yeni Kalem Girişi</a>