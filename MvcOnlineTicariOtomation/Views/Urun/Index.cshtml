@using MvcOnlineTicariOtomation.Models.Siniflar
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
@using(Html.BeginForm("Index","Urun",FormMethod.Get))
            {
                <p>
                    Ürün adı : @Html.TextBox("p")
                    <input type="submit" value="Ara"/>
                </p>
            }
<br />
<h2>Ürün listesi</h2>
<table class="table table-bordered">
    <tr>

        <th>Ürün</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyat</th>
        <th>Satış Fiyat</th>
        <th>Kategori</th>

        <th>Sil</th>
        <th>Güncelle</th>
        <th>Satış Yap</th>
    </tr>
    @foreach(var u in Model)
            {
<tr>

    <td>@u.UrunAd</td>
    <td>@u.Marka</td>
    <td>@u.Stok</td>
    <td>@u.AlisFiyat ₺</td>
    <td>@u.SatisFiyat ₺</td>
    <td>@u.Kategori.KategoriAd</td>

    <td>
        <a href="/Urun/UrunSil/@u.UrunId" class="btn btn-danger">Sil</a>
    </td>
    <td>
        <a href="/Urun/UrunGetir/@u.UrunId" class="btn btn-success">Güncelle</a>
    </td>
    <td>
        <a href="/Urun/SatisYap/@u.UrunId" class="btn btn-default" style="background-color:#ffd800">Satış Yap</a>
    </td>
</tr>
            }
</table>
<a href="/Urun/YeniUrun/" class="btn btn-info">Yeni Ürün</a>

