@using MvcOnlineTicariOtomation.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    @foreach (var k in Model)
    {
    <tr>
        <th>ID</th>
        <th>Personel Ad</th>
        <th>Soyad</th>
        <th>Görsel</th>
        <th>Departman</th>
        <th>Güncelle</th>
        <th>Satişlar</th>
    </tr>
    <tr>
        <td>
            @k.PersonelId
        </td>
        <td>
            @k.PersonelAd
        </td>
        <td>
            @k.PersonelSoyad
        </td>
        <td>
            @k.Departman.DepartmanAd
        </td>
        <td>
            <img src="@k.PersonelGorsel" style="width:100px; height:50px"/>
        </td>
        <td><a href="/Personel/PersonelGetir/@k.PersonelId" class="btn btn-warning">Güncelle</a></td>
        <td><a href="/Departman/DepartmanPersonelSatis/@k.PersonelId" style="background-color:lightcoral" class="btn btn-default">Detay</a></td>

    </tr>
    }


</table>
<a href="/Personel/PersonelEkle" class="btn btn-info">Personel Ekle</a>



